<Window x:Class="Dungeon_Valley_Explorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dungeon_Valley_Explorer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="95*" />
            <RowDefinition Height="5*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15*" />
            <ColumnDefinition Width="75*" />
            <ColumnDefinition Width="10*" />
        </Grid.ColumnDefinitions>
        <ListBox Grid.Row="0" Grid.Column="1" Background="Black" Foreground="White" Grid.ColumnSpan="2" Name="lbDisplay" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <TextBox Grid.Column="1" Grid.Row="1" Background="Black" Foreground="White" Name="tbInputArea" TextWrapping="Wrap" Text="TextBox"/>
        <ListBox Grid.Column="0" Grid.Row="0" Background="Black" Foreground="White" Name="lbOptions" Grid.RowSpan="2" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Button Grid.Column="2" Content="Input Button" Name="btInput" Grid.Row="1" Click="btInput_Click"/>

    </Grid>
</Window>
